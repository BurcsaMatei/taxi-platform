# .env.example

# ==============================
# Site (public) — EXEMPLU. Înlocuiește cu datele CLIENTULUI în producție.
# ==============================
NEXT_PUBLIC_SITE_URL=https://exemplu.ro                 # ← REPLACE (prod URL, fără trailing slash)
NEXT_PUBLIC_SITE_NAME=Exemplu                           # ← REPLACE (client)
# Trebuie să conțină %s; ex: "%s — Exemplu"
NEXT_PUBLIC_SITE_TITLE_TEMPLATE=%s — Exemplu            # ← REPLACE (client)
NEXT_PUBLIC_DEFAULT_TITLE=Exemplu                       # ← REPLACE (client)
NEXT_PUBLIC_SITE_DESC=Servicii X pentru Y.              # ← REPLACE (client)
# Cale relativă în /public sau URL absolut (poți folosi CDN)
NEXT_PUBLIC_OG_IMAGE=/images/og-image.jpg
# Lasă gol dacă nu folosești Twitter (ex: @exemplu)
NEXT_PUBLIC_TWITTER_HANDLE=
# ex: ro_RO, en_US
NEXT_PUBLIC_LOCALE=ro_RO

# ==============================
# Contact (public; doar afișare)
# ==============================
# true/false — controlează afișarea blocurilor de contact
NEXT_PUBLIC_CONTACT_ENABLED=false
NEXT_PUBLIC_CONTACT_EMAIL=contact@exemplu.ro            # ← REPLACE
# Format E.164 recomandat (ex: +40700111222); poți lăsa gol
NEXT_PUBLIC_CONTACT_PHONE=
NEXT_PUBLIC_CONTACT_STREET=Strada Exemplu 1             # ← REPLACE
NEXT_PUBLIC_CONTACT_CITY=Oraș                           # ← REPLACE
NEXT_PUBLIC_CONTACT_REGION=Județ                        # ← REPLACE
NEXT_PUBLIC_CONTACT_POSTAL=000000                       # ← REPLACE
NEXT_PUBLIC_CONTACT_COUNTRY=RO                          # ← REPLACE
# DOAR URL-ul din src al iframe-ului Google Maps; nu pune <iframe …>
NEXT_PUBLIC_CONTACT_MAP_EMBED=

# ==============================
# Social (public; pot veni ulterior din CMS)
# Dacă sunt goale, aplicația va folosi fallback-urile platformelor.
# ==============================
NEXT_PUBLIC_FB_URL=
NEXT_PUBLIC_IG_URL=
NEXT_PUBLIC_TT_URL=

# ==============================
# Paths & Assets (public)
# ==============================
# basePath pentru aplicație dacă este servită din subdirector (ex: /app); altfel lasă gol.
NEXT_PUBLIC_BASE_PATH=
# Prefix pentru asset-uri servite din CDN (ex: https://cdn.exemplu.com) — fără trailing slash.
NEXT_PUBLIC_ASSET_BASE=

# ==============================
# PWA / Thema UI (centralizate în lib/config.ts → THEME)
# ==============================
# Folosite pentru <meta name="theme-color"> (light/dark) și manifest.
NEXT_PUBLIC_THEME_PWA_COLOR_LIGHT=#ffffff
NEXT_PUBLIC_THEME_PWA_COLOR_DARK=#0b0b0b

# Activare opțională Web Share Target din manifest (dacă ai SW/handler configurat)
NEXT_PUBLIC_ENABLE_SHARE_TARGET=false

# ==============================
# PWA flags (template: OFF local; în producție/ proiect client setez la 1)
# ==============================
NEXT_ENABLE_PWA=0              # ← în producție: 1
NEXT_PUBLIC_ENABLE_PWA=0       # ← în producție: 1

# ==============================
# Analytics / Marketing (injectate lazy din CookieProvider)
# Completează DOAR ce folosești.
# ==============================
# Preferă GTM; dacă lipsește, se folosește direct GA4.
NEXT_PUBLIC_GTM_ID=
# GA4 (ex: G-XXXXXXX) sau vechiul GA (fallback)
NEXT_PUBLIC_GA4_ID=
NEXT_PUBLIC_GA_ID=
# Pixel Meta (opțional)
NEXT_PUBLIC_FB_PIXEL_ID=
