// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // Alias-uri
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./src/assets/*", "./assets/*"] // ⬅️ vezi nota de mai jos
    },

    // Asigurăm rezolvarea tipurilor custom (ex: *.svg)
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts"             // ⬅️ important pt. types/svg.d.ts
  ],
  "exclude": ["node_modules"]
}
